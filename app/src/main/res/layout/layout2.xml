<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".form2"
    android:background="#f8f8f8"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/liniear1"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt1"
            android:text="Kode Keluarga"
            android:fontFamily="@font/nunito_bold"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"


            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt2"
            android:text="ketikkan kode keluarga yang ayah bunda\nmiliki disini"
            android:fontFamily="@font/rubik_regular"
            android:layout_marginLeft="20dp"
            android:textColor="#202020"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative2"
        android:layout_below="@id/liniear1"

        >

        <EditText
            android:id="@+id/edit1"
            android:layout_width="270dp"
            android:layout_height="49dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedit"
            android:text="A1B2C3"
            android:textAlignment="center"
            android:textStyle="bold"
            
            />


    </RelativeLayout>

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative2"

        >
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txt3"
            android:layout_height="wrap_content"
            android:text="@string/privacy"
            android:fontFamily="@font/rubik_regular"
            android:textColor="#202020"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="10dp"
            />

        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:id="@+id/btn1"
            android:layout_below="@id/txt3"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button1"
            android:text="Masuk"
            android:onClick="masuk"
            android:textStyle="bold"
            android:textSize="17dp"
            android:fontFamily="@font/nunito_bold"
            android:textAllCaps="false"



            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt4"
            android:text="Belum punya kode keluarga?"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#202020"
            android:fontFamily="@font/rubik_regular"
            android:layout_marginTop="20dp"


            />

        <Button
            android:layout_width="270dp"
            android:layout_centerInParent="true"
            android:layout_height="40dp"
            android:id="@+id/btn2"
            android:layout_below="@+id/txt4"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn2"
            android:text="Beli Kode Keluarga Besar Disini"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="13dp"


            />


    </RelativeLayout>

</RelativeLayout>